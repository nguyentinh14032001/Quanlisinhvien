
@{
    ViewBag.Title = "Trash";
    Layout = "~/Views/Shared/_LayoutSV.cshtml";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase">Danh sách môn học đã xóa</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index","MonHocs")" class="btn btn-success">
                    <i class="bi bi-arrow-return-left"></i>Quay về trang chủ
                </a>

            </div>

        </div>
        <div class="card-body p-3">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center">Mã môn học</th>
                        <th class="text-center">Tên môn học</th>
                        <th  class="text-center">Số tiết lý thuyết</th>
                        <th  class="text-center">Số tiết thực hành</th>
                        <th class="text-center">Số tín chỉ</th>
                        <th  class="text-center">Tên khoa</th>
                        <th  class="text-center">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="@item.MaMH" align="center">
                        <td>@item.MaMH</td>
                        <td>@item.TenMH</td>
                        <td>@item.SoTietLT</td>
                        <td>@item.SoTietTH</td>
                        <td>@item.STC</td>
                        <td>@item.Khoa.TenKhoa</td>
                        <td>
                            <a href="@Url.Action("ReTrash", new {id=item.MaMH})" class="btn btn-warning">
                                <i class="bi bi-arrow-clockwise"></i>
                            </a>
                            <button onclick="Xoa('@item.MaMH')" class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <h5>Số lượng môm học là: @ViewBag.SoLuong</h5>
        </div>
    </div>
</div>
<script type="text/javascript">
    function Xoa(mamon) {
        a = confirm("Bạn có muốn xóa?");
        if (!a) {
            return;
        }
        $.ajax({
            url: "@Url.Action("Delete","MonHocs")",
            type: 'post',
            data: {
                mamon: mamon
            },
            success: function (data) {
                alert(data);
                location.reload();
            }
        });
    }
</script>







