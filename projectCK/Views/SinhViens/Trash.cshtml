
@{
    ViewBag.Title = "Trash";
    Layout = "~/Views/Shared/_LayoutSV.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase">Danh sách sinh viên đã xóa</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index","SinhViens")" class="btn btn-success">
                    <i class="bi bi-arrow-return-left"></i>Quay về trang chủ
                </a>
            </div>

        </div>
        <div class="card-body p-3">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center">Mã sinh viên</th>
                        <th class="text-center">Họ đệm</th>
                        <th class="text-center">Tên</th>
                        <th class="text-center">Giới tính</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">Ngày sinh</th>
                        <th class="text-center">Mật khẩu</th>
                        <th class="text-center">Lớp</th>
                        <th class="text-center">Hình ảnh</th>
                        <th class="text-center">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="@item.MaSV" align="center">

                        <td>@item.MaSV</td>
                        <td>@item.HoDemSV</td>
                        <td>@item.TenSV</td>
                        @if (item.GioiTinh == false)
                        {
                            <td>Nữ</td>
                        }
                        else
                        {
                            <td>Nam</td>
                        }
                        <td>@item.Email</td>
                        <td>@item.NgaySinh</td>
                        <td>@item.MatKhau</td>
                        <td>@item.Lop.TenLop</td>
                        <td class="text-center"><img src="~/Content/IMG/@item.HinhAnh" class="rounded-circle" style="width:100px; height:100px;" /></td>

                        <td>

                            <a href="@Url.Action("ReTrash", new {id=item.MaSV})" class="btn btn-warning">
                                <i class="bi bi-arrow-clockwise"></i>
                            </a>
                            <button onclick="Xoa('@item.MaSV')" class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            <h5>Số lượng sinh viên đã xóa là: @ViewBag.SoLuong</h5>
        </div>
    </div>
</div>
<script type="text/javascript">
    function Xoa(masv) {
        a = confirm("Bạn có muốn xóa?");
        if (!a) {
            return;
        }
        $.ajax({
            url: "@Url.Action("Delete","SinhViens")",
            type: 'post',
            data: {
                masv: masv
            },
            success: function (data) {
                alert(data);
                location.reload();
            }
        });
    }
</script>


