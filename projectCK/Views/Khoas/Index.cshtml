    $(document).on('click', '#suakhoa', function () {
        var trid = $(this).closest('tr').attr('id');
        console.log(trid);
        //getmakhoa(trid);
        $("#kiemtra").val(trid);//gán biến kiểm tra cho id
        $("#txtMaKhoa").attr('readonly', true);
        getmakhoa(trid);

    });
    function getmakhoa (makhoa){
         $.ajax({
            url: "@Url.Action("Getdata", "Khoas")",
            type: "get", //pt get
            dataType: "json",
            data: {
                id: makhoa   //truyền tham số có giá trị bằng id makhoa
            },
            success: function (data) {
                var q= jQuery.parseJSON(data); // ép về kiểu javascrip
                console.log(q);
                $('#txtMaKhoa').val(q[0]['MaKhoa']);// gán vulue cho ô input txt
                $('#txtTenKhoa').val(q[0]['TenKhoa']);
                $('#txtDiaChi').val(q[0]['DiaChi']);
                $('#txtSDT').val(q[0]['SDT']);
            }
        });
    }
    function IsValidate(makhoa,tenkhoa) {
        let count = 0;
        const style = { "color": "#f00", "font-size": "15px" };
        if (makhoa.length == "")
        {
            $('#name-check').text("Mã khoa không được rỗng");
            $('#name-check').css(style);
            count ++;
        }
        else {
            $('#name-check').text('');
        }
        if (tenkhoa.length == "") {
            $('#ten-check').text("Tên khoa không được rỗng");
            $('#ten-check').css(style);
            count++;
        }
        else {
            $('#ten-check').text('');
        }
        if (count) {
            return false;
        }
        else {
            return true;
        }
    }

    function kt() {
        if (IsValidate(true)) {
            $("#name-check").hide();
            $("#ten-check").hide();
        }
        else {
            $("#name-check").show();
            $("#ten-check"),show();
        }
      
    }
    $(document).on('click', '#themkhoa', function () {
        $('#txtMaKhoa').attr("readonly", false);
        $('#txtMaKhoa').val('');
        $('#txtTenKhoa').val('');
        $('#txtDiaChi').val('');
        $('#txtSDT').val('');
    });
    $(document).on('click', '#btnSubmit', function () {
       
        let makhoakiemtra = $('#kiemtra').val();
        console.log("id là", makhoakiemtra);
            let makhoa = $('#txtMaKhoa').val();// lấy giá trị của txtarea có id là txtTenChudDe gán cho biến tenchude
            let tenkhoa = $('#txtTenKhoa').val();
            let sdt = $('#txtSDT').val();
            let diachi = $('#txtDiaChi').val();
        if (makhoakiemtra.length == 0) {
            if (IsValidate(makhoa,tenkhoa)) {
                $.ajax({
                    url: '@Url.Action("AddData", "Khoas")',
                    type: 'post',
                    data: {
                        mk: makhoa,
                        tk: tenkhoa,
                        sodienthoai: sdt,
                        dc: diachi
                    },
                    success: function (data) {
                        alert(data);
                        location.reload();
                    }
                });
            }
        }
            else {
                $.ajax({
                    url: '@Url.Action("EditData", "Khoas")',
                    type: 'post',
                    data: {
                        mk: makhoa,
                        tk: tenkhoa,
                        sodienthoai: sdt,
                        dc: diachi
                    },
                    success: function (data) {
                        alert(data);
                        location.reload();
                    }
                });
            }

        
    });
 
    $(document).ready(function (){
        var inputElement = document.querySelector("#searchkhoa");
        console.log(inputElement);
        inputElement.oninput = function (e) {
            console.log(e.target.value);
            search(e.target.value);
        }
    });
    function search(keyword) {
        $.ajax({
             url: '@Url.Action("Getdata1", "Khoas")',
            type: 'post',
            data: {
                id: keyword,
            },
            success: function (data) {
               var q = JSON.parse(data)
                var htmldata = create(q)
                if (keyword) {
                    $("#result").css("display", "none");
                    $("#search-result").css("display", "table");
                   
                    $("#thea").css("display", "none");
                    $("#main-data").html(htmldata);
                    $("#view-bag").css("display", "none");
                    $(".pagination").css("display", "none");
                } else {
                    $("#result").css("display", "table");
                    $("#search-result").css("display", "none");
                    $("#view-bag").css("display", "flex");
                    $(".pagination").css("display", "flex");
                }
            }
            });
    }
    function create(data) {
        let rows = [];
        console.log(data);
        for (var i = 0; i < data.length; i++)
        {
            //let max = jQuery(".dname").find("tr td:eq(1)").val();
           let row = `<tr id="${data[i]["MaKhoa"]}" class="dbname">
        <td> ${data[i]["MaKhoa"]} </td>
        <td>${data[i]["TenKhoa"]}</td>
        <td>${data[i]["DiaChi"]}</td>
        <td>${data[i]["SDT"]}</td>
        <td align="center"><a id="suakhoa" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#mdlExam"><i class="bi bi-brush"></i> </a>
     
       <button onclick="navigate2('${data[i]['MaKhoa']}')" class="btn btn-danger">Xóa</button></td>
</td>
        </tr>`;
 if (data[i]["MaKhoa"]) {
                rows.push(row);
            }
        }
        return rows;
    }
    function navigate(id)
    {
    //    $.ajax({
    //        type: 'get',
    //        url: `/Khoas/Details/${id`,
    //        success: function (response) {
    //            console.log('success')
    //        }

    //    });
    //    console.log(id);
        location = `/Khoas/Details/${id}`;
    }
    function navigate2(id) {

        location = `/Khoas/DelTrash/${id}`;
    }

</script>
<div class="modal" id="mdlExam">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="card">
                <!-- Modal Header -->
                <div class="card-header d-flex" style="justify-content:space-between;align-items:center;">
                    <h4 class="modal-title" id="mdlExamLabel">Khoa</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal">
                    </button>
                </div>

                <!-- Modal body -->
                <div class="card-body" style="display: flex;flex-direction: column;align-items: center; justify-content:center">
                    <input type="hidden" id="kiemtra" value="">

                    <form action="Create">
                        <div class="form-group">
                            <label for="txaName" class="form-label" style="margin-bottom: 1px!important">Mã khoa</label>
                            <textarea class="form-control" name="makhoa" id="txtMaKhoa" rows="1" onkeydown="kt()"></textarea>
                            <span id="name-check"></span>
                        </div>
                        <div class="form-group">
                            <label for="txaName" class="form-label" style="margin-bottom: 1px!important">Tên khoa</label>
                            <textarea  class="form-control" id="txtTenKhoa" rows="1" onkeydown="kt()"></textarea>
                            <span id="ten-check"></span>
                        </div>
                        <div class="form-group">
                            <label for="txaName" class="form-label" style="margin-bottom: 1px!important">Địa chỉ</label>
                            <textarea class="form-control" id="txtDiaChi" rows="1"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="txaName" class="form-label" style="margin-bottom: 1px!important">Số điện thoại</label>
                            <textarea  class="form-control" id="txtSDT" rows="1"></textarea>
                        </div>
                    </form>
                </div>



                <!-- Modal footer -->
                <div class="modal-footer"style="display:flex; justify-content:center">
                    <a class="nutbam nutbam--1" id="btnSubmit">Xác nhận</a>
                    <button class="nutbam nutbam--1" data-bs-dismiss="modal">Trở về</button>
                </div>

            </div>
        </div>
    </div>
</div>
    





