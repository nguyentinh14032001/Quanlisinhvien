@model PagedList.IPagedList<projectCK.Models.Khoa>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSV.cshtml";
}
<link href="~/Content/using.css" rel="stylesheet">
<link href="~/Content/Uploads/PhanTrang.css" rel="stylesheet">
<style>
    .fi {

        border: 1px solid rgba(27, 31, 35, .15);
        border-radius: 6px;
        box-shadow: rgba(27, 31, 35, .1) 0 1px 0;
        box-sizing: border-box;
        color: black;
        cursor: pointer;
        display: inline-block;
        font-family: -apple-system, system-ui, "Segoe UI", Helvetica, Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji";
        font-size: 14px;
        font-weight: 600;
        line-height: 20px;
        padding: 14px 16px;
        position: relative;
        text-align: center;
        text-decoration: none;
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        vertical-align: middle;
        white-space: nowrap;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .timkhoa {
        display: flex;
        justify-content: space-between;
        align-items:center;
    }
    .tim-1{
        margin:0 10px;
        width:30%;
    }

   .text-end{
       display:flex;
       align-items:center;
   }
    .form-wrapper{
        display:flex;
        justify-content:space-between;
    }
    .nutbam {
        margin:0 10px;
    }

    .new{
        display:flex;
        align-items:center;
    }
    .antuong-content {
        display: flex;
        align-items: center;
        justify-content: space-evenly;
      
    }
    .text-end-1 .thep {
       margin: 0 10px;
    }
    .thep p {

        position: relative;
    }
    .nutbam--1 {
        background-color: #37497e;
    }
    .xuatfile {
        border-radius:10px;
        background-color: #fff;
        padding: 10px 16px;
        text-align: center;
        box-shadow: rgba(27, 31, 35, .1) 0 1px 0;
        display: flex;
        align-items: center;
        box-sizing: border-box;
        justify-content:center;
    }
    .header-content{
        display:flex;
        align-items:center;
    }
    .nut-xuat-file{
        float:right;
    }
   
.thetim{
    display:flex;
    align-items:center;
}
    
