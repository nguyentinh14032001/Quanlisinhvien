

@{
    ViewBag.Title = "Trash";
    Layout = "~/Views/Shared/_LayoutSV.cshtml";
}


<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase">Danh sách khoa đã xóa</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index","Khoas")" class="btn btn-success">
                    <i class="bi bi-arrow-return-left"></i>Quay về trang chủ
                </a>
           
            </div>

        </div>
        <div class="card-body p-3">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>

                        <th style="width:20px;" class="text-center">Mã khoa</th>
                        <th style="width:20px;" class="text-center">Tên khoa</th>
                        <th style="width:20px;" class="text-center">Số điện thoại</th>
                        <th style="width:20px;" class="text-center">Địa chỉ</th>
                        <th style="width:20px;" class="text-center">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@item.MaKhoa</td>
                            <td style="width:100px;">@item.TenKhoa</td>
                            <td>@item.SDT</td>
                            <td>@item.DiaChi</td>
                            <td>

                                <a href="@Url.Action("ReTrash", new {id=item.MaKhoa})" class="btn btn-warning">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </a>
                                <button onclick="Xoa('@item.MaKhoa')" class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>

                            </td>
                                 
                           
                        </tr>
                    }
                </tbody>
            </table>
            <h5>Số lượng khoa là: @ViewBag.SoLuong</h5>
        </div>
    </div>
</div>
<script type="text/javascript">
    function Xoa(makhoa) {
        a = confirm("Bạn có muốn xóa?");
        if (!a) {
            return;
        }
        $.ajax({
            url: "@Url.Action("Delete","Khoas")",
            type: 'post',
            data: {
                makhoa: makhoa
            },
            success: function (data) {
                alert(data);
                location.reload();
            }
        });
    }
</script>






