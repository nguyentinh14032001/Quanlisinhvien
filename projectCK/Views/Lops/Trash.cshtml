@model IEnumerable<projectCK.Models.Lop>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Views/Shared/_LayoutSV.cshtml";
}
<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase">Danh sách lớp đã xóa</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index","Lops")" class="btn btn-success">
                    <i class="bi bi-arrow-return-left"></i>Quay về trang chủ
                </a>

            </div>

        </div>
        <div class="card-body p-3">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>

                        <th class="text-center">Mã lớp</th>
                        <th class="text-center">Tên lớp</th>
                        <th class="text-center">Tên ngành</th>
                        <th class="text-center">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr align="center">

                            <td>@item.MaLop</td>
                            <td>@item.TenLop</td>
                            <td>@item.Nganh.TenNganh</td>

                            <td>

                                <a href="@Url.Action("ReTrash", new {id=item.MaLop})" class="btn btn-warning">
                                    <i class="bi bi-arrow-clockwise"></i>
                                </a>

                                <button onclick="Xoa('@item.MaLop')" class="btn btn-danger"><i class="bi bi-trash-fill"></i></button>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <h5>Số lượng Lớp là: @ViewBag.SoLuong</h5>
        </div>

    </div>
</div>
<script type="text/javascript">
    function Xoa(malop) {
        a = confirm("Bạn có muốn xóa?");
        if (!a) {
            return;
        }
        $.ajax({
            url: "@Url.Action("Delete","Lops")",
            type: 'post',
            data: {
                malop: malop
            },
            success: function (data) {
                alert(data);
                location.reload();
            }
        });
    }
</script>

